body {
  background: #eee;
  font-family: sans-serif;
}

.card {
  width: 400px;
  background: #fff;
  margin: 8px auto;
  padding: 8px;
}

.title {
  background: #e3f4ff;
  font-size: 16px;
  padding: 8px;
  margin: 8px auto;
  margin-top: 0;
}

.content {
  background: #e3f4ff;
  padding: 16px 8px;
  margin: 8px auto;
}

.button-container {
  background: #e3f4ff;
  padding: 8px;
  text-align: center;
  margin: 8px auto;
  margin-bottom: 0;
}

button {
  background: white;
  border: 1px solid #eee;
  display: block;
  padding: 8px 24px;

}

